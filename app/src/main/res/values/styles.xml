<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PanelTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/panel_title</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/panel_title_size</item>
    </style>

    <style name="PanelText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/panel_text</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textSize">@dimen/panel_text_size</item>
    </style>

</resources>
